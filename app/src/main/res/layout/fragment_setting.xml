<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".View.Fragment.ListRingtoneFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/reativelayout"
        android:layout_marginBottom="17dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:background="@drawable/ic_back"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/imBackSetting"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="17dp"
            android:layout_toRightOf="@id/imBackSetting"
            android:fontFamily="@font/ubuntu_light"
            android:text="Setting"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="70dp"
            android:id="@+id/imSave"
            android:layout_marginBottom="5dp"
            android:background="@drawable/ic_save"
            android:layout_height="70dp" />

        <TextView
            android:id="@+id/tvRingName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/imSave"
            android:fontFamily="@font/ubuntu_light"
            android:text="Save location"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:id="@+id/imNext"
            android:background="@drawable/ic_chevron_right_24px_1"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="match_parent"
            android:background="#CBCBCB"
            android:layout_below="@id/imSave"
            android:layout_toRightOf="@id/imSave"
            android:layout_height="0.5dp">

        </View>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_marginLeft="20dp"
        android:id="@+id/rlRate"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="70dp"
            android:id="@+id/imRate"
            android:layout_marginBottom="5dp"
            android:background="@drawable/ic_rate"
            android:layout_height="70dp" />

        <TextView
            android:id="@+id/tvRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/imRate"
            android:fontFamily="@font/ubuntu_light"
            android:text="Rate app"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:id="@+id/imNextRate"
            android:background="@drawable/ic_chevron_right_24px_1"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="match_parent"
            android:background="#CBCBCB"
            android:layout_below="@id/imRate"
            android:layout_toRightOf="@id/imRate"
            android:layout_height="0.5dp">

        </View>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="70dp"
            android:id="@+id/imPolicy"
            android:layout_marginBottom="5dp"
            android:background="@drawable/ic_policy"
            android:layout_height="70dp" />

        <TextView
            android:id="@+id/tvPolicy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/imPolicy"
            android:fontFamily="@font/ubuntu_light"
            android:text="Policy"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:id="@+id/imNextPolicy"
            android:background="@drawable/ic_chevron_right_24px_1"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="match_parent"
            android:background="#CBCBCB"
            android:layout_below="@id/imPolicy"
            android:layout_toRightOf="@id/imPolicy"
            android:layout_height="0.5dp">

        </View>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_marginLeft="20dp"
        android:id="@+id/rlUpdate"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="70dp"
            android:id="@+id/imUpdate"
            android:layout_marginBottom="5dp"
            android:background="@drawable/ic_update"
            android:layout_height="70dp" />

        <TextView
            android:id="@+id/tvUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/imUpdate"
            android:fontFamily="@font/ubuntu_light"
            android:text="Check for update"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:id="@+id/imNextUpdate"
            android:background="@drawable/ic_chevron_right_24px_1"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="match_parent"
            android:background="#CBCBCB"
            android:layout_below="@id/imUpdate"
            android:layout_toRightOf="@id/imUpdate"
            android:layout_height="0.5dp">

        </View>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="70dp"
            android:id="@+id/imVersion"
            android:layout_marginBottom="5dp"
            android:background="@drawable/ic_version"
            android:layout_height="70dp" />

        <TextView
            android:id="@+id/tvVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/imVersion"
            android:fontFamily="@font/ubuntu_light"
            android:text="Version 1.0.1"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:background="#CBCBCB"
            android:layout_below="@id/imVersion"
            android:layout_toRightOf="@id/imVersion"
            android:layout_height="0.5dp">

        </View>
    </RelativeLayout>
</LinearLayout>