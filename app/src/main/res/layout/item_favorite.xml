<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_marginLeft="20dp"
    android:id="@+id/rlFavorite"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="70dp"
        android:id="@+id/imPlay"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/ic_pause_button"
        android:layout_height="70dp" />

    <TextView
        android:id="@+id/tvRingName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/imPlay"
        android:fontFamily="@font/ubuntu_light"
        android:text="Ring 1"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp" />
    <ImageView

        android:layout_width="wrap_content"
        android:layout_toLeftOf="@id/imNext"
        android:background="@drawable/ic_favorite"
        android:layout_centerVertical="true"
        android:layout_marginLeft="70dp"
        android:id="@+id/imHeart"
        android:layout_marginRight="30dp"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:id="@+id/imNext"
        android:background="@drawable/ic_chevron_right_24px_1"
        android:layout_height="wrap_content" />
    <View
        android:layout_width="match_parent"
        android:background="#CBCBCB"
        android:layout_below="@id/imPlay"
        android:layout_toRightOf="@id/imPlay"
        android:layout_height="0.5dp">

    </View>
</RelativeLayout>